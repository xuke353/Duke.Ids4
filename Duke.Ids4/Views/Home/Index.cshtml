@using IdentityServer4.Extensions
@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}

<div class="container">
    <div class="welcome-block px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">
            <img class="icon" alt="Logo" src="/logofull.png">
            <br />
        </h1>
        <p class="lead">欢迎来到 Duke.Ids4</p>
    </div>

    <div class="card-deck mb-3 text-center">
        @if (!string.IsNullOrWhiteSpace(name))
        {
            <div class="card mb-4 box-shadow">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">持久授权</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title">
                        <span class="oi oi-lock-locked" title="查看" aria-hidden="true"></span>
                    </h1>
                    <a class="btn btn-lg btn-block btn-primary" href="/Grants">查看</a>
                </div>
            </div>

        }
        else
        {
            <div class="card mb-4 box-shadow">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">登录</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title">
                        <span class="oi oi-lock-locked" title="登录" aria-hidden="true"></span>
                    </h1>
                    <a class="btn btn-lg btn-block btn-primary" href="/oauth2/authorize">登录</a>
                </div>
            </div>
        }

        <div class="card mb-4 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">发现文档</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title">
                    <span class="oi oi-monitor" title="发现文档" aria-hidden="true"></span>
                </h1>
                <a href="/.well-known/openid-configuration" class="btn btn-lg btn-block btn-outline-primary">发现文档</a>
            </div>
        </div>

        <div class="card mb-4 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">各模式配置</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title">
                    <span class="oi oi-musical-note" title="模式配置" aria-hidden="true"></span>
                </h1>
                <a href="/Grants/Config" class="btn btn-lg btn-block btn-outline-primary">各模式配置</a>
            </div>
        </div>
    </div>

    <footer class="pt-4 my-md-5 pt-md-5 border-top">
        <div class="row">
            <div class="col-6 col-md">
                <small class="d-block mb-3 text-muted">© 2020 Duke</small>
            </div>
            <div class="col-md-6 text-right">
            </div>
        </div>
    </footer>
</div>